---
const { title, subtitle } = Astro.props;
---

<div class="flex flex-col justify-center p-5 shadow-2xl max-w-md rounded-lg">
  <div class="space-y-3">
    <div class="flex items-center gap-2 text-primary">
      <slot name="icon" />
      <h5 class="font-inter font-bold text-2xl">{title}</h5>
    </div>
    <p class="font-poppins text-base">{subtitle}</p>
  </div>
</div>